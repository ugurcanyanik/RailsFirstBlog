<div id="post_content">
  <h1 class="title">
    <%=@post.title %>
  </h1>

  <p class="date">
    <%= time_ago_in_words(@post.created_at)%> once olusturuldu
    | <%= link_to 'Duzenle', edit_post_path(@post) %>
    | <%= link_to 'Sil', post_path(@post), method: :delete, data: {confirm: 'Silinecek, emin misin?'} %>
  </p>

  <p class="body">
    <%=@post.body%>
  </p>
</div>